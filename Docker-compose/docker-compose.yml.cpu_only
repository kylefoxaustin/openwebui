version: '3'
services:
  owui:
    build:
      context: .
      dockerfile: Dockerfile.cpu-only-amd64
    image: kylefoxaustin/owui_llm_rag_ready:cpu-only-amd64  # Custom image name
    container_name: owui-cpu-only  # This sets the container name
    ports:
      - "8080:8080"
      - "11435:11434"  # Map container's 11434 to host's 11435
    volumes:
      - ollama_data:/root/.ollama
      - openwebui_data:/app/backend/data
    restart: unless-stopped
    environment:
      - OLLAMA_HOST=0.0.0.0
      - CUDA_VISIBLE_DEVICES=  # Empty to force CPU-only
volumes:
  ollama_data:
  openwebui_data:
